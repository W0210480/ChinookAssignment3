<Page x:Class="PROG2500_A2_Chinook.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG2500_A2_Chinook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <StackPanel Margin="0,0,-45,-70">
        <StackPanel.Background>
            <ImageBrush ImageSource="/Images/record.png" Stretch="UniformToFill"></ImageBrush>
        </StackPanel.Background>
            <TextBlock Text="Chinook - Your one-stop shop for great music" Style="{StaticResource textBlockTitle}" Margin="10,20,140,10" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Please select a page to begin your musical journey" Style="{StaticResource textBlockTextSmall}" Margin="10,10,160,10" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
    </StackPanel>
</Page>
