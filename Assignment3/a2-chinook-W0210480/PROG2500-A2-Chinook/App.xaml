<Application x:Class="PROG2500_A2_Chinook.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PROG2500_A2_Chinook"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style x:Key="textBlockTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"></Setter>
            <Setter Property="FontStyle" Value="Italic"></Setter>
        </Style>

        <Style x:Key="textBlockMed" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="FontStyle" Value="Italic"></Setter>
        </Style>

        <Style x:Key="textBlockTextSmall" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"></Setter>
        </Style>

        <Style x:Key="listViewText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>

        
        

    </Application.Resources>
</Application>
